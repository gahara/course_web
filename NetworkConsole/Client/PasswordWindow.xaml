<Window x:Class="Client.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="132.03" Width="225.03" Closing="Window_Closing_1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="164*"/>
        </Grid.ColumnDefinitions>
        <PasswordBox x:Name="boxPassword" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="194" Grid.ColumnSpan="2"/>
        <Button x:Name="btnAuthorize" Content="Авторизация" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="97" Click="btnAuthorize_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="76,66,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click" Grid.Column="1"/>
        <Label Content="Введите пароль" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
