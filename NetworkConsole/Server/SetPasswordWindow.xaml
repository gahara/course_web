<Window x:Class="Server.SetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сменить пароль" Height="264" Width="208" ResizeMode="NoResize">
    <Grid>
        <Label Content="Введите старый пароль" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите новый пароль" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top"/>
        <Label Content="Подтвердите новый пароль" HorizontalAlignment="Left" Margin="10,128,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="boxOldPassword" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" Width="180"/>
        <PasswordBox x:Name="boxNewPassword" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="180"/>
        <PasswordBox x:Name="boxConfirmPassword" HorizontalAlignment="Left" Margin="10,159,0,0" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="btnChangePassword" Content="Сменить" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Width="75" Click="btnChangePassword_Click"/>
        <Button x:Name="btnCancel" Content="Отмена" HorizontalAlignment="Left" Margin="115,195,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>

    </Grid>
</Window>
